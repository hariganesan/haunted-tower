package {	import flash.display.MovieClip;	import flash.events.Event;		public class Attacker extends MovieClip {				private var Parent:MovieClip;		private var id:int;		private var strength:int;		private var currentSpeed:int;		private var currentHealth:int;				public function Attacker(p:MovieClip, n:int, s:int, v:int, h:int) {			Parent = p;			id = n;			strength = s;			currentSpeed = v;			currentHealth = h;						Parent.addChild(this);			Init();						trace("init'd attacker: " + id);		}				// set position and begin checking for hits		private function Init():void {			x = stage.stageWidth * 0.5;			y = stage.stageHeight * 0.1;						this.addEventListener(Event.ENTER_FRAME, checkHit);		}				// move _mc and check for hits		private function checkHit(e:Event):void {					// game is over or attacker is at the base			if (Parent.getGameState() == GameState.INACTIVE || this.hitTestObject(Parent.getHorizon())) {				this.removeEventListener(Event.ENTER_FRAME, checkHit);				Parent.removeChild(this);				Parent.addDamage(strength);			}						// collision with projectile/*			var i:int;			for (i = 0; i < Parent.getProjectileCount(); i++) {				if (this.hitTestObject(Parent.getProjectile(i))) {					currentHealth -= Parent.getProjectile(i).getStrength();										if (currentHealth <= 0) {						currentHealth = 0;						this.removeEventListener(Event.ENTER_FRAME, checkHit);						Parent.removeChild(this);						break;					}				}			} */						y += currentSpeed;		}	}	}